#!/usr/bin/env bash
set -euo pipefail

version=$(<VERSION)
version=$(echo "$version" | xargs) # Trim whitespace

echo "Build and push gem"
gem build buildkite-builder.gemspec
GEM_HOST_API_KEY="$(buildkite-agent secret get RUBYGEMS_API_TOKEN)" gem push buildkite-builder-*.gem

echo "Logging in to DockerHub"
buildkite-agent secret get DOCKERHUB_PASSWORD | docker login --username zpadmin --password-stdin

echo "ğŸ”¨ Building and pushing docker image for release of Buildkite Builder version $version"
docker build --tag=gusto/buildkite-builder:"$version" \
  --platform linux/x86_64 \
  --build-arg version="$version" \
  --push .

echo "âœ… Done!"
